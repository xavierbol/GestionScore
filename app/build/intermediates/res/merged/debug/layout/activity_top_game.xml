<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_top_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bol.xavier.gestionscore.screen.TopGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_nomJeu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/nameGame"/>

        <Button
            android:id="@+id/btn_wizard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_wizard"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_afficherTop10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/btn_top10"/>

    <TextView
        android:id="@+id/tv_errorTopGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"/>
</LinearLayout>
