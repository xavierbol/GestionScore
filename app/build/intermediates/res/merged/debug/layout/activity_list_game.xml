            android:id="@+id/but_top10_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnTop10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_jeu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_pseudo_best_joueur5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/but_top10_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnTop10"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_next"/>

</LinearLayout>
